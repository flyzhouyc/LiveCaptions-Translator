<Page
    x:Class="LiveCaptionsTranslator.CaptionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LiveCaptionsTranslator"
    xmlns:localModel="clr-namespace:LiveCaptionsTranslator.models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="CaptionPage"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style x:Key="CaptionBlockStyle" TargetType="TextBlock">
                <Setter Property="TextWrapping" Value="Wrap" />
                <Setter Property="VerticalAlignment" Value="Stretch" />
            </Style>
        </Grid.Resources>

        <ui:Card
            Grid.Row="0"
            Margin="15,3,20,1"
            Padding="8"
            VerticalAlignment="Stretch">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBox Grid.Row="0"
                    x:Name="OriginalCaption"
                    FontSize="15"
                    Text="{Binding Original}"
                    IsReadOnly="True"
                    Background="Transparent"
                    BorderThickness="0"
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" 
                    FontFamily="Segoe UI Variable Text" Padding="10,3,10,3"
                    />
                <TextBox Grid.Row="1"
                    x:Name="TranslatedCaption"
                    FontSize="15"
                    Text="{Binding Translated, UpdateSourceTrigger=PropertyChanged}"
                    IsReadOnly="True"
                    Background="Transparent"
                    BorderThickness="0"
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" FontFamily="Segoe UI Variable Text Semibold" Padding="10,3,10,3" />
            </Grid>
        </ui:Card>

        <ui:Card
            Grid.Row="2"
            Margin="15,2,20,3"
            Padding="8"
            VerticalAlignment="Top" Background="#0C000000">

            <ItemsControl 
                ItemsSource="{Binding CaptionHistory}"
                VirtualizingPanel.IsVirtualizing="True">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,5" Padding="10,5,10,5" BorderThickness="0,0,0,1" BorderBrush="#50000000">
                            <StackPanel>

                                <TextBox
                                        FontSize="13"
                                        Text="{Binding Original}" 
                                        IsReadOnly="True"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        AcceptsReturn="True"
                                        TextWrapping="Wrap"
                                        Margin="0,0,0,0"
                                        VerticalScrollBarVisibility="Auto" FontFamily="Segoe UI Variable Text" Padding="10,3,10,3" />
                                <TextBox
                                        FontSize="13"
                                        Text="{Binding Translated}" 
                                        IsReadOnly="True"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        AcceptsReturn="True"
                                        TextWrapping="Wrap"
                                        Margin="0,0,0,0"
                                        VerticalScrollBarVisibility="Auto" FontFamily="Segoe UI Variable Text Semibold" Padding="10,3,10,3" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ui:Card>
        
        <DockPanel Grid.Row="3" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15,5,0,15">
            <ui:Button
            x:Name="Delete"
            Appearance="Transparent"
            Click="ClearHistory_Click"
            Icon="{ui:SymbolIcon Delete12,
                Filled=False}" HorizontalAlignment="Right" MouseOverBackground="#07000000" />
        </DockPanel>
    </Grid>
</Page>
