<Page
    x:Class="LiveCaptionsTranslator.CaptionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LiveCaptionsTranslator"
    xmlns:localModel="clr-namespace:LiveCaptionsTranslator.models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="CaptionPage"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style x:Key="CaptionBlockStyle" TargetType="TextBlock">
                <Setter Property="TextWrapping" Value="Wrap" />
                <Setter Property="VerticalAlignment" Value="Stretch" />
            </Style>
        </Grid.Resources>

        <ui:Card
            Grid.Row="0"
            Margin="15,3,20,1"
            Padding="8"
            VerticalAlignment="Stretch">
            <TextBox
                x:Name="OriginalCaption"
                FontSize="15"
                Text="{Binding Original}"
                IsReadOnly="True"
                Background="Transparent"
                BorderThickness="0"
                AcceptsReturn="True"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" 
                FontFamily="Segoe UI Variable Text"
                />
        </ui:Card>
        <ui:Card
            Grid.Row="1"
            Margin="15,1,20,3"
            Padding="8"
            VerticalAlignment="Stretch">
            <TextBox
                x:Name="TranslatedCaption"
                FontSize="15"
                Text="{Binding Translated, UpdateSourceTrigger=PropertyChanged}"
                IsReadOnly="True"
                Background="Transparent"
                BorderThickness="0"
                AcceptsReturn="True"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" FontFamily="Segoe UI Variable Text Semibold" />
        </ui:Card>

        <ui:Card
            Grid.Row="2"
            Margin="15,2,20,3"
            Padding="8"
            VerticalAlignment="Top" Background="#0C000000">
            <Grid VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <ItemsControl Grid.Row="0" 
                            ItemsSource="{Binding CaptionHistory}"
                            VirtualizingPanel.IsVirtualizing="True">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,4" Padding="8" BorderThickness="0,0,0,1" BorderBrush="#20000000">
                                <StackPanel>

                                    <TextBox
                                        FontSize="13"
                                        Text="{Binding Original}" 
                                        IsReadOnly="True"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        AcceptsReturn="True"
                                        TextWrapping="Wrap"
                                        Margin="0,0,0,0"
                                        VerticalScrollBarVisibility="Auto" FontFamily="Segoe UI Variable Text" />
                                    <TextBox
                                        FontSize="13"
                                        Text="{Binding Translated}" 
                                        IsReadOnly="True"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        AcceptsReturn="True"
                                        TextWrapping="Wrap"
                                        Margin="0,0,0,0"
                                        VerticalScrollBarVisibility="Auto" FontFamily="Segoe UI Variable Text Semibold" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <DockPanel Grid.Row="1" Margin="0,0,0,8" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <ui:Button
                        x:Name="Delete"
                        Appearance="Transparent"
                        Click="ClearHistory_Click"
                        Icon="{ui:SymbolIcon Delete12,
                         Filled=False}" HorizontalAlignment="Right" MouseOverBackground="#07000000" />
                </DockPanel>
            </Grid>
        </ui:Card>
    </Grid>
</Page>
